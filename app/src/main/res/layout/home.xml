<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:background="@color/calRed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.calu.sai.studentmedia.Home"
    >

    <RelativeLayout
        android:layout_width="1440dp"
        android:layout_height="2560dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"

        android:background="@color/black"
        >


        <ImageView
            android:id="@+id/menu"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:onClick="menu"

            android:layout_toEndOf="@id/title"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp"

            app:srcCompat="@drawable/menu"
            android:tint="@color/white"
            android:background="@color/clear"
            />
        <ImageView
            android:id="@+id/title"
            android:layout_width="290dp"
            android:layout_height="175dp"

            android:layout_marginTop="15dp"
            android:layout_marginStart="50dp"

            app:srcCompat="@drawable/logo"
            />

        <!-- Start real menu items -->
        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="2dp"

            android:layout_alignBottom="@id/title"
            android:background="@color/white"
            />

        <!--Caltimes and Paper Icon -->
        <ImageView
            android:id="@+id/paper"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:onClick="paper"

            android:layout_alignParentStart="true"
            android:layout_alignTop="@id/v1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"

            app:srcCompat="@drawable/paper"
            android:tint="@color/calRed"
            />
        <TextView
            android:id="@+id/times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="paper"

            android:layout_alignBottom="@id/paper"
            android:layout_toEndOf="@id/paper"
            android:layout_marginStart="10dp"

            android:text="@string/times"
            android:textSize="20pt"
            android:textColor="@color/white"
            />
        <!-- End -->
        <View
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="2dp"

            android:layout_below="@id/paper"
            android:background="@color/white"
            />
        <!--CUTV and TV Icon -->
        <ImageView
            android:id="@+id/tv"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:onClick="tv"

            android:layout_alignParentStart="true"
            android:layout_alignTop="@id/v2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"

            app:srcCompat="@drawable/tv"
            android:tint="@color/calRed"
            />
        <TextView
            android:id="@+id/CUTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="tv"

            android:layout_alignBottom="@id/tv"
            android:layout_toEndOf="@id/paper"
            android:layout_marginStart="10dp"

            android:text="@string/tv"
            android:textSize="20pt"
            android:textColor="@color/white"
            />
        <!-- End -->

        <View
            android:id="@+id/v3"
            android:layout_width="match_parent"
            android:layout_height="2dp"

            android:layout_below="@id/tv"

            android:background="@color/white"
            />


        <!--Radio and Radio Icon-->
        <ImageView
            android:id="@+id/radio"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:onClick="radio"

            android:layout_alignParentStart="true"
            android:layout_alignTop="@id/v3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"

            app:srcCompat="@drawable/radio"
            android:tint="@color/calRed"
            />
        <TextView
            android:id="@+id/WCAL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="radio"

            android:layout_alignBottom="@id/radio"
            android:layout_toEndOf="@id/paper"
            android:layout_marginStart="10dp"

            android:text="@string/wcal"
            android:textSize="20pt"
            android:textColor="@color/white"
            />
        <!-- End -->
        <View
            android:id="@+id/v4"
            android:layout_width="match_parent"
            android:layout_height="2dp"

            android:layout_below="@id/radio"
            android:background="@color/white"
            />
        <!--Bulb and Creative Services-->
        <ImageView
            android:id="@+id/bulb"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:onClick="lab"

            android:layout_alignParentStart="true"
            android:layout_alignTop="@id/v4"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="7dp"
            android:layout_marginStart="10dp"

            app:srcCompat="@drawable/lightbulb"
            android:tint="@color/calRed"
            />
        <TextView
            android:id="@+id/lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="lab"

            android:layout_alignBottom="@id/bulb"
            android:layout_toEndOf="@id/paper"
            android:layout_marginStart="10dp"

            android:text="@string/lab"
            android:textSize="17pt"
            android:textColor="@color/white"
            />
        <!-- End -->
        <View
            android:id="@+id/v5"
            android:layout_width="match_parent"
            android:layout_height="2dp"

            android:layout_below="@id/bulb"
            android:background="@color/white"
            />
        <!-- End -->
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
